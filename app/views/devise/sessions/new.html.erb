<div class="authentication-container">
  <div class="authentication-card">
    <div class="authentication-logo">
      <%= image_tag 'logo.png', alt: 'Lancelot Logo' %>
    </div>

    <h2 class="authentication-title">Log in to Your Realm</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name),
                        html: { class: 'authentication-form' }) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: {
                      autocomplete: "email",
                      class: 'medieval-input'
                    },
                    label: 'Email of the Realm',
                    wrapper_html: { class: 'mb-3' } %>

        <%= f.input :password,
                    required: false,
                    input_html: {
                      autocomplete: "current-password",
                      class: 'medieval-input'
                    },
                    label: 'Secret Passphrase',
                    wrapper_html: { class: 'mb-3' } %>

        <% if devise_mapping.rememberable? %>
          <div class="remember-me-checkbox mb-3">
            <%= f.input :remember_me,
                        as: :boolean,
                        label: 'Remember my Quest',
                        input_html: { class: 'form-check-input' },
                        wrapper_html: { class: 'form-check' } %>
          </div>
        <% end %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Enter the Realm", class: 'btn-medieval' %>
      </div>
    <% end %>

    <div class="authentication-links mt-3">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>