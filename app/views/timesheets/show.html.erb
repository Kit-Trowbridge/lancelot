<div class="container mb-5">
  <h1 class="ps-2"><%= @timesheet.title%></h1>

  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">Date</th>
        <th scope="col">Hours</th>
        <th scope="col">Tasks Accomplished</th>
        <th scope="col">Subtotal</th>
      </tr>
    </thead>
    <tbody>
      <% @timestamps.each do |timestamp| %>
        <% unless timestamp.end_time.nil? || timestamp.hours == 0.0 %>
          <!--Create conditional with if timestamps.same_date, group together-->
          <tr>
            <td><%= timestamp.date %></td>
            <td><%= timestamp.hours %></td>
            <td><%= timestamp.task_description %></td>
            <td>£<%= format('%.2f', timestamp.subtotal) %></td>
          </tr>
        <% end %>
      <% end %>
      <tr class="table-group-divider">
        <td><strong>Total: </strong></td>
        <td colspan="2"></td>
        <td><strong>£<%= @timesheet.total %></strong></td>
      </tr>
    </tbody>
  </table>
  <%= link_to 'Start stopwatch', new_timesheet_timestamp_path(@timesheet) %>
  <%= link_to 'View project dashboard', client_project_path(@timesheet.project.client, @timesheet.project) %>
</div>
