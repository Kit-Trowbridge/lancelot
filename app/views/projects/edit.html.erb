<div class="container mx-auto px-4 py-6">
  <div class="mb-6">
    <h1 class="text-2xl font-bold">Edit Project</h1>
    <p class="text-gray-600">Client: <%= @client.name %></p>
  </div>

  <%= form_with(model: [@client, @project], local: true, class: "space-y-6") do |form| %>
    <% if @project.errors.any? %>
      <div class="bg-red-50 p-4 rounded-md">
        <h2 class="text-red-800 font-medium">
          <%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:
        </h2>
        <ul class="list-disc pl-5 mt-2">
          <% @project.errors.full_messages.each do |message| %>
            <li class="text-red-700"><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="space-y-2">
      <%= form.label :name, class: "block font-medium" %>
      <%= form.text_field :name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
    </div>

    <div class="space-y-2">
      <%= form.label :description, class: "block font-medium" %>
      <%= form.text_area :description, rows: 4, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
    </div>

    <div class="space-y-2">
      <%= form.label :status, class: "block font-medium" %>
      <%= form.select :status,
          %w[planning active on_hold completed cancelled],
          {},
          class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div class="space-y-2">
        <%= form.label :start_date, class: "block font-medium" %>
        <%= form.date_field :start_date, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
      </div>

      <div class="space-y-2">
        <%= form.label :end_date, class: "block font-medium" %>
        <%= form.date_field :end_date, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
      </div>
    </div>

    <div class="space-y-2">
      <%= form.label :budget, class: "block font-medium" %>
      <%= form.number_field :budget, step: '0.01', class: "mt-1 block w-full rounded-md border-blue-300 shadow-sm" %>
    </div>

    <div class="flex gap-4">
      <%= form.submit "Update Project", class: "px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600" %>
      <%= link_to "Cancel", client_project_path(@client, @project),
          class: "px-4 py-2 border border-blue-300 rounded-md hover:bg-gray-50" %>
    </div>
  <% end %>
</div>
