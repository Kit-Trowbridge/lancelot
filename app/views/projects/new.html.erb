<h1>Create a New Project for <%= @client.name %></h1>

<div class="project-form">
  <%= form_with model: [@client, @project], local: true do |form| %>
    <div class="form-group">
      <%= form.label :name, class: 'form-label' %>
      <%= form.text_field :name, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :aim, class: 'form-label' %>
      <%= form.text_area :aim, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :hourly_rate, class: 'form-label' %>
      <%= form.number_field :hourly_rate, step: 0.01, class: 'form-control' %>
    </div>

    <%= form.submit 'Create Project', class: 'btn btn-primary' %>
  <% end %>
</div>

<%= link_to 'Back to Projects', client_projects_path(@client), class: 'btn btn-secondary' %>
