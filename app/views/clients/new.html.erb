<%= render "shared/lancelot_nav" %>
<div class="container">
  <h1>New Client</h1>

  <%= form_with model: @client, local: true do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, class: 'form-control' %>
    </div>

    <%= f.submit 'Create Client', class: 'btn btn-success' %>
  <% end %>

  <%= link_to 'Back to Clients', clients_path, class: 'btn btn-secondary' %>
</div>
